@{
    ViewBag.Title = "Восстановление пароля";
    Layout = "_Layout";
}

<div class="container fade-in d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="custom-card" style="max-width: 420px; width: 100%;">
        <div class="custom-card-header text-center"
             style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <h4 class="mb-0">
                <i class="fas fa-key me-2"></i>Восстановление пароля
            </h4>
        </div>

        <div class="custom-card-body">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle me-2"></i>@TempData["Info"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">
                        <i class="fas fa-envelope me-2"></i>Email
                    </label>
                    <input type="email"
                           name="email"
                           class="form-control rounded-xl"
                           placeholder="Введите ваш email"
                           required />
                    <small class="form-text text-muted">
                        На указанный email будет отправлена ссылка для восстановления пароля
                    </small>
                </div>

                <button type="submit"
                        class="btn btn-primary-custom btn-custom w-100 mb-3">
                    <i class="fas fa-paper-plane me-2"></i>Отправить инструкцию
                </button>
            </form>

            <div class="text-center">
                <a href="@Url.Action("Login", "Account")" class="btn btn-link">
                    <i class="fas fa-arrow-left me-1"></i>Вернуться к входу
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .feature-coming-soon {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 12px;
            padding: 2rem;
            text-align: center;
        }

        .coming-soon-icon {
            font-size: 3rem;
            color: var(--primary-medium);
            margin-bottom: 1rem;
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
    </style>
}


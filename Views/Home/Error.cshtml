@{
    ViewBag.Title = "Ошибка";
    Layout = "_Layout";
    int statusCode = ViewBag.StatusCode as int? ?? 500;
    string errorTitle = ViewBag.ErrorTitle as string ?? "Произошла ошибка";
    string errorMessage = ViewBag.ErrorMessage as string ?? "Произошла непредвиденная ошибка.";
    string? requestId = ViewBag.RequestId as string;
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-exclamation-triangle text-warning" style="font-size: 80px;"></i>
                </div>
                <h1 class="display-1 fw-bold text-primary">@statusCode</h1>
                <h2 class="h3 mb-3">@errorTitle</h2>
                <p class="text-muted mb-4">@errorMessage</p>
                @if (!string.IsNullOrEmpty(requestId))
                {
                    <p class="small text-muted mb-3">
                        <span class="text-uppercase">Идентификатор запроса:</span> <code>@requestId</code>
                    </p>
                }
                <div class="d-flex gap-2 justify-content-center flex-wrap">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>На главную
                    </a>
                    <button type="button" onclick="history.back()" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Назад
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .fade-in {
        animation: fadeIn 0.5s;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>


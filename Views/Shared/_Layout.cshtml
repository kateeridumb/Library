<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Библиотечная система</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Merriweather:wght@300;400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/mobile.css" media="only screen and (max-width: 992px)" />

    @RenderSection("Styles", required: false)
</head>
<body class="fade-in">
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="fas fa-book-open"></i>
                <span>Библиотека МПТ</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon" style="filter: invert(1);">☰</span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                           href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home"></i> Главная
                        </a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Admin")">
                                <i class="fas fa-cogs"></i> Админ-панель
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Client")">
                                <i class="fas fa-book"></i> Каталог
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Librarian"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Librarian")">
                                <i class="fas fa-book-reader"></i> Библиотекарь
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Client")">
                                <i class="fas fa-book"></i> Каталог
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Student"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Client")">
                                <i class="fas fa-user"></i> Каталог
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Guest"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Client")">
                                <i class="fas fa-book"></i> Каталог
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("InstitutionRepresentative"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "InstitutionRepresentative")">
                                <i class="fas fa-university"></i> Представитель
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Subscriptions", "InstitutionRepresentative")">
                                <i class="fas fa-id-card"></i> Подписки
                            </a>
                        </li>
                    }

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        string role = "Студент";
                        string roleClass = "role-badge-client";
                        
                        if (User.IsInRole("Admin"))
                        {
                            role = "Админ";
                            roleClass = "role-badge-admin";
                        }
                        else if (User.IsInRole("Librarian"))
                        {
                            role = "Библиотекарь";
                            roleClass = "role-badge-librarian";
                        }
                        else if (User.IsInRole("Student"))
                        {
                            role = "Студент";
                            roleClass = "role-badge-client";
                        }
                        else if (User.IsInRole("InstitutionRepresentative"))
                        {
                            role = "Представитель";
                            roleClass = "role-badge-librarian";
                        }
                        else if (User.IsInRole("Guest"))
                        {
                            role = "Гость";
                            roleClass = "role-badge-guest";
                        }
                        
                        <li class="nav-item ms-2">
                            <span class="role-badge @roleClass">
                                <i class="fas fa-user-tag"></i>
                                @role
                            </span>
                        </li>
                    }
                    <li class="nav-item ms-2">
                        <button type="button" class="btn btn-sm btn-outline-light" id="siteThemeToggle" title="Тема">
                            <i class="fas fa-moon" id="siteThemeIcon"></i>
                        </button>
                    </li>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item ms-2">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit"
                                        class="nav-link text-danger d-inline-flex align-items-center"
                                        onclick="return confirm('Вы уверены, что хотите выйти из профиля?');">
                                    <i class="fas fa-sign-out-alt me-1"></i> Выйти
                                </button>
                            </form>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="footer-custom mt-5">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="small">
                &copy; @DateTime.Now.Year Библиотека МПТ
            </div>
            <div>
                <a href="@Url.Action("Index", "Home")" class="btn btn-sm btn-outline-light me-2">
                    <i class="fas fa-home me-1"></i> Главная
                </a>
            </div>
        </div>
    </footer>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
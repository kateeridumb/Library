@{
    ViewBag.Title = "Панель представителя учебного заведения";
    Layout = "_Layout";
    int totalStudents = ViewBag.TotalStudents as int? ?? 0;
    int totalDownloads = ViewBag.TotalDownloads as int? ?? 0;
    int totalReads = ViewBag.TotalReads as int? ?? 0;
}

<div class="container fade-in">
    
    <div class="representative-hero mb-5">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="hero-content">
                    <h1 class="hero-title mb-3">
                        <i class="fas fa-university me-3"></i>Панель представителя
                    </h1>
                    @if (ViewBag.Faculty != null)
                    {
                        <div class="faculty-badge mb-3">
                            <i class="fas fa-building me-2"></i>
                            <span class="faculty-name">@ViewBag.Faculty.FacultyName</span>
                        </div>
                    }
                    <p class="hero-description">
                        Управляйте подписками и отслеживайте активность студентов вашего учебного заведения
                    </p>
                </div>
            </div>
            <div class="col-md-4 text-end">
                <a href="@Url.Action("Index", "Home")" class="btn btn-hero">
                    <i class="fas fa-home me-2"></i>На главную
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-modern alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-modern alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    
    @if (ViewBag.ActiveSubscription != null)
    {
        var subscription = ViewBag.ActiveSubscription as LibraryMPT.Models.Subscription;
        @if (subscription != null && subscription.StartDate.HasValue && subscription.EndDate.HasValue)
        {
            <div class="subscription-status-card active mb-5">
                <div class="status-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="status-content">
                    <h5 class="status-title">Активная подписка</h5>
                    <p class="status-name">@subscription.Name</p>
                    <div class="status-dates">
                        <span class="date-item">
                            <i class="fas fa-calendar-alt me-2"></i>
                            С @subscription.StartDate.Value.ToString("dd.MM.yyyy")
                        </span>
                        <span class="date-separator">→</span>
                        <span class="date-item">
                            По @subscription.EndDate.Value.ToString("dd.MM.yyyy")
                        </span>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="subscription-status-card inactive mb-5">
            <div class="status-icon warning">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="status-content">
                <h5 class="status-title">Нет активной подписки</h5>
                <p class="status-description">Выберите подписку для вашего учебного заведения, чтобы студенты могли получать доступ к книгам.</p>
                <a href="@Url.Action("Subscriptions", "InstitutionRepresentative")" class="btn btn-action">
                    <i class="fas fa-arrow-right me-2"></i>Выбрать подписку
                </a>
            </div>
        </div>
    }

    
    <div class="stats-grid mb-5">
        <div class="stat-card-modern">
            <div class="stat-icon-wrapper blue">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@totalStudents</div>
                <div class="stat-label">Студентов</div>
            </div>
        </div>
        <div class="stat-card-modern">
            <div class="stat-icon-wrapper green">
                <i class="fas fa-download"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@totalDownloads</div>
                <div class="stat-label">Скачиваний</div>
            </div>
        </div>
        <div class="stat-card-modern">
            <div class="stat-icon-wrapper purple">
                <i class="fas fa-book-reader"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@totalReads</div>
                <div class="stat-label">Прочтений</div>
            </div>
        </div>
        <div class="stat-card-modern">
            <div class="stat-icon-wrapper @(ViewBag.ActiveSubscription != null ? "success" : "danger")">
                <i class="fas fa-id-card"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">
                    @if (ViewBag.ActiveSubscription != null)
                    {
                        <span class="text-success">Активна</span>
                    }
                    else
                    {
                        <span class="text-danger">Нет</span>
                    }
                </div>
                <div class="stat-label">Подписка</div>
            </div>
        </div>
    </div>

    
    <div class="section-header mb-4">
        <h2 class="section-title">
            <i class="fas fa-th-large me-3"></i>Управление
        </h2>
    </div>

    <div class="management-cards mb-5">
        <div class="management-card">
            <div class="card-icon blue">
                <i class="fas fa-id-card"></i>
            </div>
            <div class="card-content">
                <h5 class="card-title">Выбор подписки</h5>
                <p class="card-description">Выберите подписку для вашего учебного заведения из доступных шаблонов</p>
                <a href="@Url.Action("Subscriptions", "InstitutionRepresentative")" class="card-link">
                    Перейти к подпискам <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>

        <div class="management-card">
            <div class="card-icon green">
                <i class="fas fa-user-graduate"></i>
            </div>
            <div class="card-content">
                <h5 class="card-title">Статистика студентов</h5>
                <p class="card-description">Просматривайте активность студентов: скачивания, прочтения книг</p>
                <a href="@Url.Action("StudentStatistics", "InstitutionRepresentative")" class="card-link">
                    Просмотреть статистику <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>

        <div class="management-card">
            <div class="card-icon purple">
                <i class="fas fa-book"></i>
            </div>
            <div class="card-content">
                <h5 class="card-title">Статистика книг</h5>
                <p class="card-description">Анализируйте популярность книг среди студентов вашего учебного заведения</p>
                <a href="@Url.Action("BookStatistics", "InstitutionRepresentative")" class="card-link">
                    Просмотреть статистику <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>

    
    <div class="section-header mb-4">
        <h3 class="section-subtitle">
            <i class="fas fa-bolt me-3"></i>Быстрые действия
        </h3>
    </div>

    <div class="quick-actions mb-5">
        <a href="@Url.Action("Subscriptions", "InstitutionRepresentative")" class="quick-action-btn success">
            <div class="action-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <span>Выбрать подписку</span>
        </a>
        <a href="@Url.Action("Subscriptions", "InstitutionRepresentative")" class="quick-action-btn primary">
            <div class="action-icon">
                <i class="fas fa-list"></i>
            </div>
            <span>Все подписки</span>
        </a>
        <a href="@Url.Action("StudentStatistics", "InstitutionRepresentative")" class="quick-action-btn info">
            <div class="action-icon">
                <i class="fas fa-users"></i>
            </div>
            <span>Статистика студентов</span>
        </a>
    </div>
</div>

@section Styles {
    <style>
        
        .representative-hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 20px;
            padding: 3rem 2.5rem;
            color: white;
            box-shadow: 0 10px 40px rgba(102, 126, 234, 0.3);
            margin-bottom: 2rem;
        }

        .hero-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: white;
            margin-bottom: 1rem;
        }

        .faculty-badge {
            display: inline-flex;
            align-items: center;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 500;
        }

        .faculty-name {
            font-weight: 600;
        }

        .hero-description {
            font-size: 1.1rem;
            opacity: 0.95;
            margin-top: 1rem;
        }

        .btn-hero {
            background: white;
            color: #667eea;
            padding: 0.75rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
        }

        .btn-hero:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
            color: #764ba2;
        }

        
        .subscription-status-card {
            display: flex;
            align-items: center;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
        }

        .subscription-status-card.active {
            background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
            color: white;
        }

        .subscription-status-card.inactive {
            background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
            color: white;
        }

        .status-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            margin-right: 2rem;
        }

        .status-icon.warning {
            background: rgba(255, 255, 255, 0.2);
        }

        .status-content {
            flex: 1;
        }

        .status-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .status-name {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 1rem;
            opacity: 0.95;
        }

        .status-dates {
            display: flex;
            align-items: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .date-item {
            display: flex;
            align-items: center;
            font-size: 0.95rem;
        }

        .date-separator {
            font-weight: 600;
            opacity: 0.8;
        }

        .btn-action {
            display: inline-flex;
            align-items: center;
            background: white;
            color: #e67e22;
            padding: 0.6rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            margin-top: 1rem;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .btn-action:hover {
            transform: translateX(5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .stat-card-modern {
            background: white;
            border-radius: 16px;
            padding: 2rem;
            display: flex;
            align-items: center;
            gap: 1.5rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
        }

        .stat-card-modern:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }

        .stat-icon-wrapper {
            width: 70px;
            height: 70px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            flex-shrink: 0;
        }

        .stat-icon-wrapper.blue {
            background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        }

        .stat-icon-wrapper.green {
            background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
        }

        .stat-icon-wrapper.purple {
            background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
        }

        .stat-icon-wrapper.success {
            background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
        }

        .stat-icon-wrapper.danger {
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        }

        .stat-content {
            flex: 1;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-dark);
            margin-bottom: 0.25rem;
        }

        .stat-label {
            font-size: 0.95rem;
            color: var(--text-medium);
            font-weight: 500;
        }

        
        .section-header {
            margin-bottom: 2rem;
        }

        .section-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-dark);
            border-bottom: 3px solid var(--accent-gold);
            padding-bottom: 0.5rem;
            display: inline-block;
        }

        .section-subtitle {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--primary-medium);
        }

        
        .management-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 2rem;
        }

        .management-card {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            border-top: 4px solid transparent;
        }

        .management-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
        }

        .management-card:nth-child(1) {
            border-top-color: #3498db;
        }

        .management-card:nth-child(2) {
            border-top-color: #2ecc71;
        }

        .management-card:nth-child(3) {
            border-top-color: #9b59b6;
        }

        .card-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            color: white;
            margin-bottom: 1.5rem;
        }

        .card-icon.blue {
            background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        }

        .card-icon.green {
            background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
        }

        .card-icon.purple {
            background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
        }

        .card-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--primary-dark);
            margin-bottom: 0.75rem;
        }

        .card-description {
            color: var(--text-medium);
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .card-link {
            display: inline-flex;
            align-items: center;
            color: var(--primary-medium);
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .card-link:hover {
            color: var(--primary-dark);
            transform: translateX(5px);
        }

        
        .quick-actions {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .quick-action-btn {
            flex: 1;
            min-width: 200px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem 1.5rem;
            border-radius: 16px;
            text-decoration: none;
            color: white;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .quick-action-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            color: white;
        }

        .quick-action-btn.success {
            background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
        }

        .quick-action-btn.primary {
            background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        }

        .quick-action-btn.info {
            background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
        }

        .action-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        
        .alert-modern {
            border-radius: 12px;
            border: none;
            padding: 1.25rem 1.5rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        @@media (max-width: 768px) {
            .representative-hero {
                padding: 2rem 1.5rem;
            }

            .hero-title {
                font-size: 2rem;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .management-cards {
                grid-template-columns: 1fr;
            }

            .quick-actions {
                flex-direction: column;
            }

            .quick-action-btn {
                width: 100%;
            }
        }
    </style>
}


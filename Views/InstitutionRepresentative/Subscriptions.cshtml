@model List<LibraryMPT.Models.Subscription>

@{
    ViewBag.Title = "Выбор подписки";
    Layout = "_Layout";
    var mySubscriptions = ViewBag.MySubscriptions as List<LibraryMPT.Models.Subscription> ?? new List<LibraryMPT.Models.Subscription>();
}

<div class="container fade-in">
    
    <div class="page-header-modern mb-5">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-id-card me-3"></i>Выбор подписки
            </h1>
            <p class="page-subtitle">Выберите подписку для вашего учебного заведения</p>
        </div>
        <a asp-action="Index" class="btn btn-back">
            <i class="fas fa-arrow-left me-2"></i>Назад
        </a>
    </div>

    @if (ViewBag.Faculty != null)
    {
        <div class="faculty-info-card mb-4">
            <i class="fas fa-university"></i>
            <div>
                <strong>Учебное заведение</strong>
                <p class="mb-0">@ViewBag.Faculty.FacultyName</p>
            </div>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-modern alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-modern alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (mySubscriptions.Any())
    {
        <div class="active-subscriptions-card mb-4">
            <div class="card-header-modern">
                <i class="fas fa-check-circle me-2"></i>
                <h5 class="mb-0">Активные подписки</h5>
            </div>
            <div class="subscriptions-list">
                @foreach (var sub in mySubscriptions)
                {
                    var isApproved = sub.Status == "Approved" || sub.Status == null;
                    var isPending = sub.Status == "Pending";
                    var isRejected = sub.Status == "Rejected";
                    var isActive = isApproved && sub.StartDate.HasValue && sub.EndDate.HasValue && 
                                   DateTime.Now >= sub.StartDate.Value && DateTime.Now <= sub.EndDate.Value;
                    
                    <div class="subscription-item @(isActive ? "active" : isPending ? "pending-item" : isRejected ? "rejected" : "")">
                        <div class="subscription-info">
                            <strong>@sub.Name</strong>
                            @if (sub.StartDate.HasValue && sub.EndDate.HasValue)
                            {
                                <span class="subscription-dates">
                                    @sub.StartDate.Value.ToString("dd.MM.yyyy") - @sub.EndDate.Value.ToString("dd.MM.yyyy")
                                </span>
                            }
                        </div>
                        @if (isPending)
                        {
                            <span class="status-badge pending">Ожидает одобрения</span>
                        }
                        else if (isRejected)
                        {
                            <span class="status-badge rejected">Отклонена</span>
                        }
                        else if (isActive)
                        {
                            <span class="status-badge active">Активна</span>
                        }
                        else if (sub.StartDate.HasValue && sub.StartDate.Value > DateTime.Now)
                        {
                            <span class="status-badge pending">Начнется @sub.StartDate.Value.ToString("dd.MM.yyyy")</span>
                        }
                        else if (sub.EndDate.HasValue && sub.EndDate.Value < DateTime.Now)
                        {
                            <span class="status-badge expired">Истекла</span>
                        }
                        else
                        {
                            <span class="status-badge expired">Неактивна</span>
                        }
                    </div>
                }
            </div>
        </div>
    }

    <div class="info-card-modern mb-5">
        <i class="fas fa-info-circle"></i>
        <div>
            <strong>Как это работает</strong>
            <p class="mb-0">Выберите одну из трех доступных подписок из списка ниже. После выбора заявка будет отправлена библиотекарю на рассмотрение. После одобрения подписка будет активирована для вашего учебного заведения, и все студенты вашего факультета получат доступ к книгам, требующим подписку.</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="fas fa-inbox"></i>
            <h4>Нет доступных подписок</h4>
            <p>Обратитесь к администратору для создания шаблонов подписок</p>
        </div>
    }
    else
    {
        <div class="subscription-templates-grid">
            @foreach (var template in Model)
            {
                var isSelected = mySubscriptions.Any(s => s.Name == template.Name);
                <div class="subscription-template-card @(isSelected ? "selected" : "")">
                    <div class="template-header">
                        <div class="template-icon">
                            <i class="fas fa-id-card"></i>
                        </div>
                        <h5 class="template-name">@template.Name</h5>
                    </div>
                    <div class="template-body">
                        <div class="duration-info">
                            <i class="fas fa-calendar-alt me-2"></i>
                            <span class="duration-label">Длительность:</span>
                            @if (template.DurationDays.HasValue)
                            {
                                var days = template.DurationDays.Value;
                                var months = days / 30;
                                var years = days / 365;
                                
                                <span class="duration-value">
                                    @if (years >= 1)
                                    {
                                        <strong>@years</strong> @(years == 1 ? "год" : years < 5 ? "года" : "лет")
                                    }
                                    else if (months >= 1)
                                    {
                                        <strong>@months</strong> @(months == 1 ? "месяц" : months < 5 ? "месяца" : "месяцев")
                                    }
                                    else
                                    {
                                        <strong>@days</strong> @(days == 1 ? "день" : days < 5 ? "дня" : "дней")
                                    }
                                </span>
                            }
                        </div>
                        
                        @if (isSelected)
                        {
                            <div class="selected-badge">
                                <i class="fas fa-check-circle me-2"></i>
                                <span>Уже выбрана</span>
                            </div>
                        }
                        else
                        {
                            <form asp-action="SelectSubscription" method="post" class="mt-3">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="subscriptionId" value="@template.SubscriptionID" />
                                <button type="submit" class="btn-select-subscription" 
                                        onclick="return confirm('Активировать подписку \"@template.Name\" для вашего учебного заведения? Подписка начнется с сегодняшней даты.');">
                                    <i class="fas fa-check me-2"></i>Выбрать подписку
                                </button>
                            </form>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Styles {
    <style>
        
        .page-header-modern {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 2px solid var(--primary-lightest);
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-dark);
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            color: var(--text-medium);
            margin-bottom: 0;
        }

        .btn-back {
            background: white;
            color: var(--primary-medium);
            border: 2px solid var(--primary-light);
            padding: 0.6rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .btn-back:hover {
            background: var(--primary-medium);
            color: white;
            transform: translateX(-3px);
        }

        
        .faculty-info-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1.5rem;
            border-radius: 12px;
            display: flex;
            align-items: center;
            gap: 1rem;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        .faculty-info-card i {
            font-size: 2rem;
        }

        
        .active-subscriptions-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            overflow: hidden;
        }

        .card-header-modern {
            background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
            color: white;
            padding: 1.25rem 1.5rem;
            display: flex;
            align-items: center;
        }

        .subscriptions-list {
            padding: 1.5rem;
        }

        .subscription-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 0.75rem;
            background: var(--primary-lightest);
            transition: all 0.3s ease;
        }

        .subscription-item:hover {
            background: var(--primary-soft);
            transform: translateX(5px);
        }

        .subscription-item.active {
            background: linear-gradient(135deg, rgba(46, 204, 113, 0.1) 0%, rgba(39, 174, 96, 0.1) 100%);
            border-left: 4px solid #2ecc71;
        }

        .subscription-item.pending-item {
            background: linear-gradient(135deg, rgba(243, 156, 18, 0.1) 0%, rgba(230, 126, 34, 0.1) 100%);
            border-left: 4px solid #f39c12;
        }

        .subscription-item.rejected {
            background: linear-gradient(135deg, rgba(231, 76, 60, 0.1) 0%, rgba(192, 57, 43, 0.1) 100%);
            border-left: 4px solid #e74c3c;
        }

        .subscription-info {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .subscription-dates {
            font-size: 0.9rem;
            color: var(--text-medium);
        }

        .status-badge {
            padding: 0.4rem 1rem;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .status-badge.active {
            background: #2ecc71;
            color: white;
        }

        .status-badge.pending {
            background: #f39c12;
            color: white;
        }

        .status-badge.expired {
            background: #95a5a6;
            color: white;
        }

        .status-badge.rejected {
            background: #e74c3c;
            color: white;
        }

        
        .info-card-modern {
            background: linear-gradient(135deg, #fff3cd 0%, #ffe69c 100%);
            border-left: 4px solid #f39c12;
            padding: 1.5rem;
            border-radius: 12px;
            display: flex;
            gap: 1rem;
            align-items: start;
        }

        .info-card-modern i {
            font-size: 1.5rem;
            color: #f39c12;
            margin-top: 0.25rem;
        }

        
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .empty-state i {
            font-size: 4rem;
            color: var(--text-light);
            margin-bottom: 1.5rem;
        }

        .empty-state h4 {
            color: var(--primary-dark);
            margin-bottom: 0.75rem;
        }

        .empty-state p {
            color: var(--text-medium);
        }

        
        .subscription-templates-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 2rem;
        }

        .subscription-template-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            overflow: hidden;
            border: 3px solid transparent;
        }

        .subscription-template-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
        }

        .subscription-template-card.selected {
            border-color: #2ecc71;
            box-shadow: 0 8px 30px rgba(46, 204, 113, 0.3);
        }

        .template-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .subscription-template-card.selected .template-header {
            background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
        }

        .template-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .template-name {
            font-size: 1.3rem;
            font-weight: 700;
            margin: 0;
        }

        .template-body {
            padding: 2rem;
        }

        .duration-info {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 0.5rem;
            padding: 1rem;
            background: var(--primary-lightest);
            border-radius: 10px;
            margin-bottom: 1.5rem;
        }

        .duration-label {
            color: var(--text-medium);
            font-weight: 500;
        }

        .duration-value {
            color: var(--primary-dark);
            font-size: 1.1rem;
        }

        .selected-badge {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            background: linear-gradient(135deg, rgba(46, 204, 113, 0.1) 0%, rgba(39, 174, 96, 0.1) 100%);
            color: #27ae60;
            border-radius: 10px;
            font-weight: 600;
        }

        .btn-select-subscription {
            width: 100%;
            padding: 1rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .btn-select-subscription:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }

        @@media (max-width: 768px) {
            .page-header-modern {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .subscription-templates-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}


@model Role
@{
    ViewBag.Title = "Добавить роль";
    Layout = "_Layout";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="custom-card">
                <div class="custom-card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Добавить роль
                    </h5>
                </div>
                <div class="custom-card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }

                    <form asp-action="AddRole" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Название роли</label>
                            <input asp-for="RoleName" class="form-control" 
                                   placeholder="Например: Moderator" 
                                   required />
                            <small class="form-text text-muted">
                                Укажите название роли (например: Admin, Librarian, Student, Moderator)
                            </small>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Примечание:</strong> После создания роли её можно будет назначать пользователям 
                            в разделе "Управление пользователями".
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="RoleManagement" class="btn btn-secondary">
                                Отмена
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Создать
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


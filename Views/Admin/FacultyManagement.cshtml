@model List<Faculty>
@{
    ViewBag.Title = "Управление факультетами";
    Layout = "_Layout";
}

<div class="container fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-graduation-cap me-2"></i>Управление факультетами
        </h2>
        <a asp-action="AddFaculty" class="btn btn-success">
            <i class="fas fa-plus"></i> Добавить факультет
        </a>
    </div>

    
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-10">
                    <label class="form-label">Поиск по названию</label>
                    <input type="text" name="search" class="form-control" 
                           value="@ViewBag.Search" placeholder="Введите название факультета...">
                </div>
                <div class="col-md-2 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Поиск
                    </button>
                    <a asp-action="FacultyManagement" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Сброс
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Факультеты отсутствуют. Создайте первый факультет.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Название факультета</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var f in Model)
                    {
                        <tr>
                            <td>
                                <strong class="text-primary">@f.FacultyName</strong>
                            </td>
                            <td class="text-end">
                                <a asp-action="EditFaculty"
                                   asp-route-id="@f.FacultyID"
                                   class="btn btn-sm btn-warning me-2">
                                    <i class="fas fa-pen-to-square"></i>
                                </a>
                                <a asp-action="DeleteFaculty"
                                   asp-route-id="@f.FacultyID"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Удалить факультет? Это может повлиять на пользователей с этим факультетом.')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>


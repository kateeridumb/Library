@model Role
@{
    ViewBag.Title = "Редактировать роль";
    Layout = "_Layout";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="custom-card">
                <div class="custom-card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Редактировать роль
                    </h5>
                </div>
                <div class="custom-card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }

                    <form asp-action="EditRole" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="RoleID" />

                        <div class="mb-3">
                            <label class="form-label">Название роли</label>
                            <input asp-for="RoleName" class="form-control" required />
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="RoleManagement" class="btn btn-secondary">
                                Отмена
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i> Сохранить
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


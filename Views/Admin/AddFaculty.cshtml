@model Faculty
@{
    ViewBag.Title = "Добавить факультет";
    Layout = "_Layout";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="custom-card">
                <div class="custom-card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Добавить факультет
                    </h5>
                </div>
                <div class="custom-card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }

                    <form asp-action="AddFaculty" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Название факультета</label>
                            <input asp-for="FacultyName" class="form-control" 
                                   placeholder="Например: Информационные технологии" 
                                   required />
                            <small class="form-text text-muted">
                                Укажите полное название факультета или учебного заведения
                            </small>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="FacultyManagement" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Назад
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Создать
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@model LibraryMPT.Models.Subscription

@{
    ViewBag.Title = "Создать шаблон подписки";
    Layout = "_Layout";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="custom-card">
                <div class="custom-card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Создать шаблон подписки
                    </h5>
                </div>
                <div class="custom-card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Название подписки</label>
                            <input asp-for="Name" class="form-control" 
                                   placeholder="Например: Подписка на месяц" 
                                   required />
                            <small class="form-text text-muted">
                                Укажите название для идентификации типа подписки
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Длительность (в днях)</label>
                            <input asp-for="DurationDays" type="number" 
                                   class="form-control" 
                                   min="1" 
                                   placeholder="Например: 30 для месяца, 365 для года"
                                   required />
                            <small class="form-text text-muted">
                                Укажите количество дней действия подписки (например: 30, 90, 365)
                            </small>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Важно:</strong> Вы создаете шаблон подписки. Представители учебных заведений 
                            смогут выбрать этот шаблон, и подписка будет автоматически активирована для их факультета 
                            с текущей даты на указанный период.
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Назад
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Создать шаблон
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


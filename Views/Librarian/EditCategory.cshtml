@model Category
@{
    ViewBag.Title = "Редактировать категорию";
    Layout = "_Layout";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="custom-card">
                <div class="custom-card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Редактировать категорию
                    </h5>
                </div>
                <div class="custom-card-body">
                    <form asp-action="EditCategory" method="post" class="mt-2">
                        <input type="hidden" asp-for="CategoryID" />

                        <div class="mb-3">
                            <label class="form-label">Название</label>
                            <input asp-for="CategoryName" class="form-control" required />
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="CategoryManagement" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Назад
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Сохранить
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

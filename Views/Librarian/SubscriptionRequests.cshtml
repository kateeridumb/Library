@model List<LibraryMPT.Models.SubscriptionRequestDto>

@{
    ViewBag.Title = "Заявки на подписки";
    Layout = "_Layout";
    var statusFilter = ViewBag.StatusFilter as string ?? "all";
}

<div class="container fade-in">
    
    <div class="page-header-modern mb-5">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-clipboard-list me-3"></i>Заявки на подписки
            </h1>
            <p class="page-subtitle">Рассмотрение заявок на подписки от представителей учебных заведений</p>
        </div>
        <a href="@Url.Action("Index", "Librarian")" class="btn btn-back">
            <i class="fas fa-arrow-left me-2"></i>Назад
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-modern alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-modern alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="fas fa-inbox"></i>
            <h4>Нет заявок на рассмотрение</h4>
            <p>В данный момент нет заявок на подписки, ожидающих одобрения</p>
        </div>
    }
    else
    {
        <div class="status-filters mb-4">
            <a class="status-filter @(statusFilter == "all" ? "active" : "")"
               asp-action="SubscriptionRequests" asp-route-status="all">Все</a>
            <a class="status-filter pending @(statusFilter == "pending" ? "active" : "")"
               asp-action="SubscriptionRequests" asp-route-status="pending">Ожидают</a>
            <a class="status-filter approved @(statusFilter == "approved" ? "active" : "")"
               asp-action="SubscriptionRequests" asp-route-status="approved">Одобрены</a>
            <a class="status-filter rejected @(statusFilter == "rejected" ? "active" : "")"
               asp-action="SubscriptionRequests" asp-route-status="rejected">Отклонены</a>
        </div>

        <div class="requests-grid">
            @foreach (var request in Model)
            {
                var statusClass = (request.Status ?? "Pending").ToLowerInvariant();
                <div class="request-card status-@statusClass">
                    <div class="request-header status-@statusClass">
                        <div class="request-icon">
                            <i class="fas fa-id-card"></i>
                        </div>
                        <div class="request-title">
                            <h5>@request.SubscriptionName</h5>
                            <span class="request-id">Заявка #@request.SubscriptionID</span>
                        </div>
                        <span class="request-status">@request.Status</span>
                    </div>

                    <div class="request-body">
                        <div class="info-section">
                            <div class="info-item">
                                <i class="fas fa-user-tie"></i>
                                <div class="info-content">
                                    <strong>Представитель:</strong>
                                    <span>@(request.RequestedByUsername ?? "Не указан")</span>
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <i class="fas fa-envelope"></i>
                                <div class="info-content">
                                    <strong>Email:</strong>
                                    <span>@(request.RequestedByEmail ?? "Не указан")</span>
                                </div>
                            </div>

                            <div class="info-item">
                                <i class="fas fa-university"></i>
                                <div class="info-content">
                                    <strong>Учебное заведение:</strong>
                                    <span>@(request.FacultyName ?? "Не указано")</span>
                                </div>
                            </div>

                            <div class="info-item">
                                <i class="fas fa-users"></i>
                                <div class="info-content">
                                    <strong>Количество студентов:</strong>
                                    <span class="students-count">@request.StudentsCount</span>
                                </div>
                            </div>

                            <div class="info-item">
                                <i class="fas fa-calendar-alt"></i>
                                <div class="info-content">
                                    <strong>Длительность подписки:</strong>
                                    @if (request.DurationDays.HasValue)
                                    {
                                        var days = request.DurationDays.Value;
                                        var months = days / 30;
                                        var years = days / 365;
                                        
                                        <span>
                                            @if (years >= 1)
                                            {
                                                <strong>@years</strong> @(years == 1 ? "год" : years < 5 ? "года" : "лет")
                                            }
                                            else if (months >= 1)
                                            {
                                                <strong>@months</strong> @(months == 1 ? "месяц" : months < 5 ? "месяца" : "месяцев")
                                            }
                                            else
                                            {
                                                <strong>@days</strong> @(days == 1 ? "день" : days < 5 ? "дня" : "дней")
                                            }
                                        </span>
                                    }
                                    else
                                    {
                                        <span>Не указана</span>
                                    }
                                </div>
                            </div>
                        </div>

                        @if ((request.Status ?? "Pending") == "Pending")
                        {
                            <div class="request-actions">
                                <form asp-action="ApproveSubscription" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="subscriptionId" value="@request.SubscriptionID" />
                                    <button type="submit" class="btn-approve" 
                                            onclick="return confirm('Одобрить заявку на подписку \"@request.SubscriptionName\" для учебного заведения \"@request.FacultyName\"? Подписка будет активирована с сегодняшней даты.');">
                                        <i class="fas fa-check me-2"></i>Одобрить
                                    </button>
                                </form>

                                <form asp-action="RejectSubscription" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="subscriptionId" value="@request.SubscriptionID" />
                                    <button type="submit" class="btn-reject" 
                                            onclick="return confirm('Отклонить заявку на подписку \"@request.SubscriptionName\"?');">
                                        <i class="fas fa-times me-2"></i>Отклонить
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Styles {
    <style>
        
        .page-header-modern {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 2px solid var(--primary-lightest);
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-dark);
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            color: var(--text-medium);
            margin-bottom: 0;
        }

        .btn-back {
            background: white;
            color: var(--primary-medium);
            border: 2px solid var(--primary-light);
            padding: 0.6rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .btn-back:hover {
            background: var(--primary-medium);
            color: white;
            transform: translateX(-3px);
        }

        
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .empty-state i {
            font-size: 4rem;
            color: var(--text-light);
            margin-bottom: 1.5rem;
        }

        .empty-state h4 {
            color: var(--primary-dark);
            margin-bottom: 0.75rem;
        }

        .empty-state p {
            color: var(--text-medium);
        }

        
        .requests-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
            gap: 2rem;
        }

        .status-filters {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
        }

        .status-filter {
            padding: 0.4rem 1rem;
            border-radius: 999px;
            background: #f3f4f6;
            color: #374151;
            text-decoration: none;
            font-weight: 600;
            border: 1px solid transparent;
        }

        .status-filter.active {
            background: #0f4c5c;
            color: white;
        }

        .status-filter.pending { border-color: #f59e0b; }
        .status-filter.approved { border-color: #10b981; }
        .status-filter.rejected { border-color: #ef4444; }

        
        .request-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .request-card.status-pending {
            border-color: #f59e0b40;
        }

        .request-card.status-approved {
            border-color: #10b98140;
        }

        .request-card.status-rejected {
            border-color: #ef444440;
        }

        .request-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
            border-color: var(--primary-light);
        }

        .request-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .request-header.status-approved {
            background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        }

        .request-header.status-pending {
            background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
        }

        .request-header.status-rejected {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        }

        .request-status {
            margin-left: auto;
            font-size: 0.85rem;
            font-weight: 700;
            padding: 0.3rem 0.8rem;
            border-radius: 999px;
            background: rgba(255, 255, 255, 0.2);
        }

        .request-icon {
            font-size: 2.5rem;
        }

        .request-title h5 {
            margin: 0;
            font-size: 1.3rem;
            font-weight: 700;
        }

        .request-id {
            font-size: 0.85rem;
            opacity: 0.9;
        }

        .request-body {
            padding: 2rem;
        }

        .info-section {
            margin-bottom: 1.5rem;
        }

        .info-item {
            display: flex;
            align-items: start;
            gap: 1rem;
            margin-bottom: 1.25rem;
            padding-bottom: 1.25rem;
            border-bottom: 1px solid var(--primary-lightest);
        }

        .info-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .info-item i {
            font-size: 1.3rem;
            color: var(--primary-medium);
            margin-top: 0.25rem;
            min-width: 24px;
        }

        .info-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .info-content strong {
            color: var(--text-medium);
            font-size: 0.9rem;
            font-weight: 600;
        }

        .info-content span {
            color: var(--primary-dark);
            font-size: 1rem;
            font-weight: 500;
        }

        .students-count {
            color: #2ecc71 !important;
            font-weight: 700 !important;
            font-size: 1.2rem !important;
        }

        
        .request-actions {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 2px solid var(--primary-lightest);
        }

        .btn-approve,
        .btn-reject {
            flex: 1;
            padding: 0.875rem 1.5rem;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-approve {
            background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
            color: white;
        }

        .btn-approve:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(46, 204, 113, 0.4);
        }

        .btn-reject {
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            color: white;
        }

        .btn-reject:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(231, 76, 60, 0.4);
        }

        @@media (max-width: 768px) {
            .page-header-modern {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .requests-grid {
                grid-template-columns: 1fr;
            }

            .request-actions {
                flex-direction: column;
            }
        }
    </style>
}


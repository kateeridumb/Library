@model List<Publisher>
@{
    ViewBag.Title = "Издательства";
    Layout = "_Layout";
}

<div class="container fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-building me-2"></i>Управление издательствами
        </h2>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i> Назад в панель
            </a>
            <a asp-action="AddPublisher" class="btn btn-success">
                <i class="fas fa-plus"></i> Добавить издательство
            </a>
        </div>
    </div>

    
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-10">
                    <label class="form-label">Поиск по названию</label>
                    <input type="text" name="search" class="form-control" 
                           value="@ViewBag.Search" placeholder="Введите название издательства...">
                </div>
                <div class="col-md-2 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Поиск
                    </button>
                    <a asp-action="PublisherManagement" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Сброс
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Издательства отсутствуют. Создайте первое издательство.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var publisher in Model)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="custom-card h-100">
                        <div class="custom-card-header" style="background: linear-gradient(135deg, #9B59B6 0%, #BB8FCE 100%);">
                            <h5 class="mb-0 text-white">
                                <i class="fas fa-building me-2"></i>@publisher.PublisherName
                            </h5>
                        </div>
                        <div class="custom-card-body">
                            <div class="mb-3">
                                <strong>Название:</strong> @publisher.PublisherName
                            </div>
                            <div class="d-flex gap-2 mt-3">
                                <a asp-action="EditPublisher"
                                   asp-route-id="@publisher.PublisherID"
                                   class="btn btn-warning btn-sm flex-fill">
                                    <i class="fas fa-pen-to-square"></i> Редактировать
                                </a>
                                <a asp-action="DeletePublisher"
                                   asp-route-id="@publisher.PublisherID"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Удалить издательство? Это может повлиять на книги.')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
